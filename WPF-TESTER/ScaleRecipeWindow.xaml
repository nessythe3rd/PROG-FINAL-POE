<Window x:Class="WPF_TESTER.ScaleRecipeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_TESTER"
        mc:Ignorable="d"
        Title="ScaleRecipeWindow" Height="450" Width="800">
    <Grid Background="LightBlue">
        <StackPanel>
            <TextBlock Text="Scale Recipe" FontSize="16" FontWeight="Bold" Margin="10"/>
            <ListBox x:Name="RecipesListBox" Margin="10"/>
            <TextBox x:Name="ScalingFactorTextBox" Margin="10"/>
            <Button Content="Scale Recipe"  Margin="10"/>
            <Button Content="Back" Width="200" Margin="10" Click="Back_Click"/>
        </StackPanel>

    </Grid>
</Window>
